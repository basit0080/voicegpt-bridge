<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="#FFFFFF">

    <!-- Top title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VoiceGPT Bridge"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp" />

    <!-- Description -->
    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press the mic button and speak.\nYour voice will be converted to text below."
        android:textSize="14sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- Recognized text box -->
    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top|start"
        android:padding="16dp"
        android:text="Your speech text will appear here..."
        android:textSize="16sp"
        android:textColor="#333333"
        android:background="#F5F5F5" />

    <!-- Mic button -->
    <Button
        android:id="@+id/btnStartVoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸŽ™ï¸ Start Voice Input"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp" />

</LinearLayout>
